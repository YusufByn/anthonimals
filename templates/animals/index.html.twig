{% extends 'base.html.twig' %}

{% block title %}Animals index{% endblock %}

{% block body %}
    <h1>Page d'accueil des animaux</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Numéro</th>
                <th>Nom</th>
                <th>Race</th>
                <th>Crée le</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for animal in animals %}
            <tr>
                <td>{{ animal.id }}</td>
                <td>{{ animal.name }}</td>
                <td>{{ animal.breed.name }}</td>
                <td>{{ animal.createdAt ? animal.createdAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_animals_show', {'id': animal.id}) }}">Voir</a>
                    <a href="{{ path('app_animals_edit', {'id': animal.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_animals_new') }}">Créer un nouveau</a>
{% endblock %}
