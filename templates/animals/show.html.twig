{% extends 'base.html.twig' %}

{% block title %}Animals{% endblock %}

{% block body %}
    <h1>Animals</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ animal.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ animal.name }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ animal.img }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ animal.createdAt ? animal.createdAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ animal.updatedAt ? animal.updatedAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_animals_index') }}">back to list</a>

    <a href="{{ path('app_animals_edit', {'id': animal.id}) }}">edit</a>

    {{ include('animals/_delete_form.html.twig') }}
{% endblock %}
