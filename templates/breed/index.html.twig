{% extends 'base.html.twig' %}

{% block title %}Page d'accueil des races{% endblock %}

{% block body %}
    <h1>Page d'accueil des races</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for breed in breeds %}
            <tr>
                <td>{{ breed.id }}</td>
                <td>{{ breed.name }}</td>
                <td>
                    <a href="{{ path('app_breed_show', {'id': breed.id}) }}">Voir</a>
                    <a href="{{ path('app_breed_edit', {'id': breed.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_breed_new') }}">Créer un nouveau</a>
{% endblock %}
